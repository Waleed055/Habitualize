<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.beforeauth.introscreens.IntroActivity"
    android:background="@color/white"
    >


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/into_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/intro_background_img"
                android:scaleType="fitXY"
                android:paddingRight="@dimen/_30sdp"
                />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                android:id="@+id/dots_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:dotsColor="#C1BEF3"
                app:dotsCornerRadius="8dp"
                app:dotsSize="10dp"
                app:dotsSpacing="2dp"
                app:dotsWidthFactor="2.5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                app:selectedDotColor="@color/blue"
                app:progressMode="true"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/intro_bold_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_60sdp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/intro_1_bold_text"
                android:textColor="@color/bold_text_color"
                android:textSize="@dimen/_22sdp" />


            <TextView
                android:id="@+id/intro_description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/inter_medium"
                android:text="@string/intro_1_dec_text"
                android:textAlignment="center"
                android:textColor="@color/small_text_color"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>


        <TextView
            android:id="@+id/intro_next_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:background="@drawable/background_next_btn"
            android:elevation="@dimen/_10sdp"
            android:gravity="center"
            android:text="Next"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/_33sdp"
            android:layout_marginVertical="@dimen/_15sdp"
            android:textColor="@color/white" />


        </RelativeLayout>

        </FrameLayout>


    </com.google.android.material.card.MaterialCardView>



</LinearLayout>