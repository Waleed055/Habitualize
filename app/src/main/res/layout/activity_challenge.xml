<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme"
    android:orientation="vertical"
    tools:context=".ui.afterauth.challenge.ChallengeActivity"
    android:id="@+id/root_view">

    <include
        android:id="@+id/notification_included_layout"
        layout="@layout/header_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <com.vanniktech.emoji.EmojiEditText
                android:id="@+id/fragment_profile_feeling_emoji"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:cursorVisible="false"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:inputType="textNoSuggestions"
                android:maxLength="2"
                android:textSize="@dimen/_20sdp"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/add_emoji_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:elevation="@dimen/_2sdp"
                android:src="@drawable/plus_icon" />
        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:background="@drawable/edit_text_background"
            android:hint="Input"
            android:paddingStart="@dimen/_10sdp" />

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/notification_included_layout"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/task_rv_background">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home_bg_gif" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_40sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/outlinedTextField"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_toStartOf="@id/save_button"
                    android:hint="Description"
                    app:boxStrokeColor="@color/theme"
                    app:hintTextColor="@color/theme">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/challenge_text_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/theme" />

                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/gray"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/days_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_day"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginBottom="@dimen/_80sdp"/>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/background_next_btn"
            android:fontFamily="@font/inter_semi_bold"
            android:gravity="center"
            android:text="Create"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />


    </FrameLayout>


</LinearLayout>