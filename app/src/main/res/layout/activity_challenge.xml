<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme"
    android:orientation="vertical"
    tools:context=".ui.afterauth.challenge.ChallengeActivity">

    <include
        android:id="@+id/notification_included_layout"
        layout="@layout/header_layout" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginHorizontal="@dimen/_20sdp"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/plus_icon"
        android:layout_gravity="center_vertical"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/edit_text_background"
        android:layout_marginStart="@dimen/_15sdp"
        android:hint="Input"
        android:paddingStart="@dimen/_10sdp"
        />

</LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/task_rv_background"
        android:layout_below="@id/notification_included_layout"
        android:layout_marginTop="@dimen/_15sdp"
        >

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home_bg_gif"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical"
            >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/edit_text_background_black"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:hint="Input"
            android:paddingStart="@dimen/_10sdp"
            />



           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/days_rv"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
               android:orientation="vertical"
               tools:listitem="@layout/item_day"
               android:layout_marginTop="@dimen/_10sdp"
               />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:textColor="@color/white"
            android:text="Create"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="@dimen/_14sdp"
            android:background="@drawable/background_next_btn"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/_20sdp"
            />


    </FrameLayout>


</LinearLayout>