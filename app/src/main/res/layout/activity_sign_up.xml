<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme"
    android:id="@+id/root"
    tools:context=".ui.auth.signup.SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_40sdp"
        android:orientation="vertical"
        android:background="@drawable/task_rv_background">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/linearlayout"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_30sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/app_icon"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:src="@drawable/splash_icon"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/habitualizer"
                    android:textColor="@color/theme"
                    android:textSize="@dimen/_20sdp" />

                <TextView
                    android:id="@+id/text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_gravity="start"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/signup"
                    android:layout_marginHorizontal="@dimen/_17sdp"
                    android:textColor="@color/theme"
                    android:textSize="@dimen/_14sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edit_text_background"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_1"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_1sdp"
                        app:cardBackgroundColor="@color/theme"
                        app:cardCornerRadius="@dimen/_4sdp" />
                    <EditText
                        android:id="@+id/et_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="@string/unique_user_name"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:inputType="text"
                        android:textColorHint="@color/hint_color"
                        android:textColor="@color/theme_black"
                        android:maxLines="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/edit_text_background"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_2"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_1sdp"
                        app:cardBackgroundColor="@color/theme"
                        app:cardCornerRadius="@dimen/_4sdp" />
                    <EditText
                        android:id="@+id/et_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="@string/first_name"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:inputType="text"
                        android:textColorHint="@color/hint_color"
                        android:textColor="@color/theme_black"
                        android:maxLines="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/edit_text_background"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_3"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_1sdp"
                        app:cardBackgroundColor="@color/theme"
                        app:cardCornerRadius="@dimen/_4sdp" />
                    <EditText
                        android:id="@+id/et_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="@string/last_name"
                        android:textColorHint="@color/hint_color"
                        android:textColor="@color/theme_black"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:inputType="text"
                        android:maxLines="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/edit_text_background"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_4"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_1sdp"
                        app:cardBackgroundColor="@color/theme"
                        app:cardCornerRadius="@dimen/_4sdp" />
                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="@string/password"
                        android:textColorHint="@color/hint_color"
                        android:textColor="@color/theme_black"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:inputType="text"
                        android:maxLines="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/edit_text_background"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_5"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_1sdp"
                        app:cardBackgroundColor="@color/theme"
                        app:cardCornerRadius="@dimen/_4sdp" />
                    <EditText
                        android:id="@+id/et_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="@string/confirm_password"
                        android:textColorHint="@color/hint_color"
                        android:textColor="@color/theme_black"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:inputType="text"
                        android:maxLines="1"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_login_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signup_navigation_text"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/theme_black"
                    android:layout_gravity="end"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:textSize="@dimen/_10sdp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/confirm_card"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="end"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/theme"
                    android:layout_marginBottom="@dimen/_40sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_3sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="0dp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/icon_forward"
                        app:tint="@color/theme_white"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_20sdp"
            android:gravity="center_vertical">
            <CheckBox
                android:id="@+id/cbPrivacyPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:buttonTint="@color/text_grey"/>
            <TextView
                android:id="@+id/privacyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy_text"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/_10sdp"
                android:gravity="center"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>