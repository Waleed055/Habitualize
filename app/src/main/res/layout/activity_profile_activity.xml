<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme"
    android:id="@+id/root"
    tools:context=".ui.profile.ProfileActivity">

    <include
        android:id="@+id/included_layout"
        layout="@layout/header_layout" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_image"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_below="@id/included_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:src="@drawable/profile_icon"
        app:civ_border_color="@color/white"
        app:civ_border_width="@dimen/_2sdp" />

    <ImageView
        android:id="@+id/iv_edit_profile_btn"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignEnd="@id/user_image"
        android:layout_alignBottom="@id/user_image"
        android:layout_marginEnd="@dimen/_minus10sdp"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/blog_icon"
        app:tint="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/user_image"
        android:background="@drawable/task_rv_background">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_25sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/notifications"
                        android:textColor="@color/theme_black"
                        android:textSize="@dimen/_12sdp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/profile_notification_switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:switchMinWidth="@dimen/_42sdp"
                        android:theme="@style/SCBSwitch"
                        app:tint="@color/theme_black" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/edit_text_background"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_1"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_1sdp"
                        app:cardBackgroundColor="@color/theme"
                        app:cardCornerRadius="@dimen/_4sdp" />

                    <EditText
                        android:id="@+id/et_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:clickable="false"
                        android:focusable="false"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/theme_black"
                        android:textColorHint="@color/hint_color"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/edit_text_background"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_2"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_1sdp"
                        app:cardBackgroundColor="@color/theme"
                        app:cardCornerRadius="@dimen/_4sdp" />

                    <EditText
                        android:id="@+id/et_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="text"
                        android:textColor="@color/theme_black"
                        android:textColorHint="@color/hint_color"
                        android:maxLines="1"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/edit_text_background"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_3"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_1sdp"
                        app:cardBackgroundColor="@color/theme"
                        app:cardCornerRadius="@dimen/_4sdp" />

                    <EditText
                        android:id="@+id/et_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/theme_black"
                        android:textColorHint="@color/hint_color"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/edit_text_background"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_4"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_1sdp"
                        app:cardBackgroundColor="@color/theme"
                        app:cardCornerRadius="@dimen/_4sdp" />

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/theme_black"
                        android:textColorHint="@color/hint_color"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/update_card"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_40sdp"
                    app:cardBackgroundColor="@color/theme"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_3sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/update"
                        android:textColor="@color/theme_white"
                        android:textSize="@dimen/_12sdp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>