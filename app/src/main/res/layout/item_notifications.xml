<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:layout_marginHorizontal="@dimen/_15sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    app:cardElevation="@dimen/_2sdp"
    android:background="@color/theme_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_black">

        <TextView
            android:id="@+id/tv_notification_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/roboto_regular"
            android:text="Notification #2"
            android:textColor="@color/theme"
            android:textSize="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/iv_remove"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_6sdp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/ic_remove_icon"
            app:tint="@color/warning_red" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_am_pm_card"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_18sdp"
            app:cardBackgroundColor="@color/theme_light"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_toStartOf="@id/iv_remove"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp">
            <TextView
                android:id="@+id/tv_am_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="am"
                android:textSize="@dimen/_9sdp"
                android:layout_gravity="center"
                android:textColor="@color/theme"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_time_card"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toStartOf="@id/cv_am_pm_card"
            app:cardBackgroundColor="@color/theme_light"
            app:cardCornerRadius="@dimen/_5sdp">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="12:35"
                android:textColor="@color/theme"
                android:textSize="@dimen/_10sdp" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>