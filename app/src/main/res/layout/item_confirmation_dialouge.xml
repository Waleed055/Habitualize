<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_190sdp"
        android:layout_centerInParent="true"
        android:clipChildren="false"
        android:background="@drawable/gernal_dialouge_background"
        android:layout_marginVertical="@dimen/_10sdp"
        android:elevation="@dimen/_10sdp"
        >

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >



            <ImageView
                android:id="@+id/dialoge_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/place_holder"
                android:layout_marginTop="-12dp"
                android:layout_gravity="center_horizontal"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_below="@+id/dialoge_img"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Positive Affirmations part2"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do you want to Start challenge?"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:textColor="@color/bold_text_color"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/confirmation_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/background_next_btn"
                android:elevation="@dimen/_10sdp"
                android:gravity="center"
                android:text="let,go!"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_12sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:textColor="@color/white" />

        </RelativeLayout>


    </FrameLayout>


</RelativeLayout>