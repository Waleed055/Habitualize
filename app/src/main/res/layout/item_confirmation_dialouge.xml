<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false">

    <FrameLayout
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_190sdp"
        android:layout_centerInParent="true"
        android:clipChildren="false"
        android:background="@drawable/gernal_dialouge_background"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:elevation="@dimen/_3sdp">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/dialoge_img"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-12dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tv_challenge_emoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-12dp"
                android:textSize="@dimen/_70sdp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:layout_above="@id/confirmation_btn"
                android:layout_below="@+id/dialoge_img"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_challenge_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/theme_black"
                    android:textSize="@dimen/_18sdp"
                    android:inputType="textMultiLine"
                    android:maxLines="2"
                    android:gravity="center" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/do_you_want_to_start_challenge"
                    android:textColor="@color/theme_black"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/confirmation_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                app:cardBackgroundColor="@color/theme"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_alignParentBottom="true"
                app:cardElevation="@dimen/_5sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_gravity="center"
                    android:text="@string/let_go"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>


    </FrameLayout>

</RelativeLayout>